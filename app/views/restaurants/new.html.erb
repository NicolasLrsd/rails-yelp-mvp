<h1>New review</h1>

<%= simple_form_for(@restaurant) do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category, collection: Restaurant::RESTAURANT_TYPES %>
  <%= f.submit "Create", class: "btn btn-primary" %>
<% end %>

<p><%= link_to "Back to list", restaurants_path%></p>
